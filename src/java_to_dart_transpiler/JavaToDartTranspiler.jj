String primaryExpression():
{String code="",ex="";
boolean isId =false;
}
{
 (   ex = algebricExpression(){code=ex;}
| ex = booleanExpression() {code=ex;}
| ex = stringExpression() {code=ex;}
| ex = functionExpression() {code=ex;}
| <IDENTIFIER> {ex=token.image;code=ex;isId=true;}
) {
  if(isId) {
	checkVariable(ex);
  } 
  return code;}
}

String declaration():
{
  String code = "",ex="",typeValue="",id="";
}
{
(  typeValue=type() {code += typeValue + " ";}
  <IDENTIFIER > {id=token.image;code += token.image;}
  <ASSIGN> {code += " = ";}
  ex = primaryExpression() {code += ex;}
  <SEMICOLON> {code += ";\n";}
) {
	addVariable(typeValue,id);
	
	return code;
  }
}

String atribution(): {String code="",ex="";}
{
  (    <IDENTIFIER> {code+=token.image;}
 	<ASSIGN> {code+=token.image;}
 	ex = primaryExpression() {code += ex;}
 	<SEMICOLON> {code += ";\n";}
  )
  {
	//checkVariable
	return code;
  }	
}

String printStatement(): {String code="",ex="";} {
	(
	<PRINT> {code+="print";}
	<LEFT_PAREN> {code+=token.image;}
	ex = primaryExpression() {code+=ex;}
	<RIGHT_PAREN> {code+=token.image;}
	<SEMICOLON> {code += ";\n";}
	) {return code;}
}

String statement():
{String code="",v="";}
{
 (
   v = declaration(){code=v;}
| v = condition() {code=v;}
|  v = whileLoop() {code=v;}
| v = atribution() {code=v;}
|  v = printStatement() {code=v;}
) {return code;}
}

String codeBlock(): {String code="",stats="";}{
(stats=statement() {code+=stats;})*
{return code;}
}

